                                    'rgba(255, 206, 86, 0.5)',
                                    'rgba(75, 192, 192, 0.5)',
                                    'rgba(153, 102, 255, 0.5)',
                                ],
                                borderColor: [
                                    'rgba(255, 206, 86, 1)',
                                    'rgba(75, 192, 192, 1)',
                                    'rgba(153, 102, 255, 1)',
                                ],
                                borderWidth: 1
                            }]
                        };
                        var incomeOptions = {
                            responsive: true,
                            maintainAspectRatio: false
                        };

                        var incomeChart = new Chart(ctx, {
                            type: 'pie',
                            data: incomeData,
                            options: incomeOptions
