@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ModelComplex>//SimpleMVC.Models.SimpleExemple



<div class="cont">
    <div class="info">
    <div class="sekcja1">
        @{
            var personWithId2 = Model?.FirstOrDefault(modelc => modelc?.Person?.Id == 2);
            if (personWithId2 != null)
            {
                <h1>@(personWithId2?.Person?.FirstName) Twój dochód to: </h1>
            }
            else
            {
                <h1>Brak informacji dla osoby o Id równym 2</h1>
            }
        }
        
    <p>@personWithId2.Income.Wypłata+ @personWithId2.Income.DodatkowaPraca + @personWithId2.Income.Renta</p>
   
    </div>
    
    <div class="sekcja2">
        @{
           
            if (personWithId2 != null)
            {
                <h1>@(personWithId2?.Person?.FirstName) Twóje oszczędności to: </h1>
                    
            }
            else
            {
                <h1>Brak informacji dla osoby o Id równym 2</h1>
            }
        }
            <p>@personWithId2.Saving.Inwestycje+@personWithId2.Saving.Lokaty+@personWithId2.Saving.Obligacje+@personWithId2.Saving.Kieszonkowe+@personWithId2.Saving.NaPrzyszłość </p>


    </div>
    </div>
    <div class="przyciski1">
        <div class="dodatkowe-przyciski1" id="dodatkowePrzyciski1" style="display: none;">
            <button class="przyciskDodatkowy1" onclick="wybierzOpcje('+ Dodaj wydatek 1'); zobaczFormularzZwykly()">+zwykły wydatek</button>
            <button class="przyciskDodatkowy1" onclick="wybierzOpcje('+ Dodaj wydatek 2')">+stały wydatek</button>
        </div>
        <button class="przycisk1" type="text" id="przyciskWydatek" onclick="pokazDodatkowePrzyciski('dodatkowePrzyciski1', 'przyciskWydatek')">+ Dodaj wydatek</button>

        <div class="dodatkowe-przyciski2" id="dodatkowePrzyciski2" style="display: none;">
            <button class="przyciskDodatkowy2" onclick="wybierzOpcje('+ Dodaj przychod 1')">+dodatkowy przychód</button>
            <button class="przyciskDodatkowy2" onclick="wybierzOpcje('+ Dodaj przychod 2')">+stały przychód</button>
        </div>
        <button class="przycisk2" type="text" id="przyciskPrzychod" onclick="pokazDodatkowePrzyciski('dodatkowePrzyciski2', 'przyciskPrzychod')">+ Dodaj przychód</button>

        <div class="dodatkowe-przyciski3" id="dodatkowePrzyciski3" style="display: none;">
            <button class="przyciskDodatkowy3" onclick="wybierzOpcje('+ Dodaj oszczednosc 1')">+dodatkowa oszczędność</button>
            <button class="przyciskDodatkowy3" onclick="wybierzOpcje('+ Dodaj oszczednosc 2')">+stała oszczędność</button>
        </div>
        <button class="przycisk3" type="text" id="przyciskOszczednosc" onclick="pokazDodatkowePrzyciski('dodatkowePrzyciski3', 'przyciskOszczednosc')">+ Dodaj oszczędności</button>
    </div>

    <div id="formularzZwyklyWydatek" class="formularz" style="display: none;">
        <form id="formZwyklyWydatek">
            <label for="nazwaZwyklegoWydatku">Nazwa wydatku:</label>
            <select id="nazwaZwyklegoWydatku" name="nazwaZwyklegoWydatku">
                <!-- Dodaj opcje do wyboru -->
                <option value="opcja1">Opcja 1</option>
                <option value="opcja2">Opcja 2</option>
                <!-- Dodaj więcej opcji według potrzeb -->
            </select>
            <br>

            <label for="kategoriaZwyklegoWydatku">Kategoria wydatku:</label>
            <select id="kategoriaZwyklegoWydatku" name="kategoriaZwyklegoWydatku">
                <!-- Dodaj opcje do wyboru -->
                <option value="kategoria1">Kategoria 1</option>
                <option value="kategoria2">Kategoria 2</option>
                <!-- Dodaj więcej opcji według potrzeb -->
            </select>
            <br>

            <label for="ileZwyklegoWydatku">Ilość:</label>
            <input type="number" id="ileZwyklegoWydatku" name="ileZwyklegoWydatku">
            <br>

            <label for="dataZwyklegoWydatku">Data:</label>
            <input type="date" id="dataZwyklegoWydatku" name="dataZwyklegoWydatku">
            <br>

            <button type="button" onclick="zapiszZwykly()">Zapisz zwykły wydatek</button>
        </form>
    </div>


 <div class="listy1">
    <div class="sekcja3">
    <h2>Lista wydatków</h2>
            <ul>
                @{
                    var spendingForId2 = Model?.FirstOrDefault(modelc => modelc?.Person?.Id == 2)?.Spending;
                    if (spendingForId2 != null)
                    {
                        foreach (var property in spendingForId2.GetType().GetProperties())
                        {
                            if (property.PropertyType == typeof(float))
                            {
                                var value = (float)property.GetValue(spendingForId2);
                                if (value != 0)
                                {
                                    <li>@property.Name: @value</li>
                                }
                            }
                        }
                    }
                    else
                    {
                        <li>Brak informacji dla osoby o Id równym 2</li>
                    }
                }
            </ul>

    </div>

    <div class="sekcja4">
    <h2>Lista przychodów</h2>
            <ul>
                @{
                    var incomeForId2 = Model?.FirstOrDefault(modelc => modelc?.Person?.Id == 2)?.Income;
                    if (incomeForId2 != null)
                    {
                        foreach (var property in incomeForId2.GetType().GetProperties())
                        {
                            if (property.PropertyType == typeof(float))
                            {
                                var value = (float)property.GetValue(incomeForId2);
                                if (value != 0)
                                {
                                    <li>@property.Name: @value</li>
                                }
                            }
                        }
                    }
                    else
                    {
                        <li>Brak informacji dla osoby o Id równym 2</li>
                    }
                }
            </ul>
    </div>
    <div class="sekcja5">
        <h2>Lista oszczędności</h2>
            <ul>
                @{
                    var savingsForId2 = Model?.FirstOrDefault(modelc => modelc?.Person?.Id == 2)?.Saving;
                    if (savingsForId2 != null)
                    {
                        foreach (var property in savingsForId2.GetType().GetProperties())
                        {
                            if (property.PropertyType == typeof(float))
                            {
                                var value = (float)property.GetValue(savingsForId2);
                                if (value != 0)
                                {
                                    <li>@property.Name: @value</li>
                                }
                            }
                        }
                    }
                    else
                    {
                        <li>Brak informacji dla osoby o Id równym 2</li>
                    }
                }
            </ul>
    </div>
    </div>
    
</div>
