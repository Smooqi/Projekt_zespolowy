                        <option value="kiedy1">Miesięcznie</option>
                        <option value="kiedy2">Rocznie</option>
                        
                    </select>
                    <br>

                    <label for="dataStalegoPrzychodu">Data:</label >
                    <input type="date" id="dataStalegoPrzychodu" name="dataStalegoPrzychodu" required>
                    <br>

                    <button type="button" onclick="zapiszStalyPrzychod()">Zapisz stały przychód</button>
                </form>
            </div>

            <div id="formularzZwyklaOszczednosc" class="formularz" style="display: none;">
                <form id="formZwyklaOszczednosc">
                    <label for="nazwaZwyklejOszczednosci">Nazwa oszczędności:</label>
                    <select id="nazwaZwyklejOszczednosci" name="nazwaZwyklejOszczednosci" required>
