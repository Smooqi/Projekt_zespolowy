    <div class="row">
        <div class="col-12">
            <div id="formularzZwyklyWydatek" class="formularz" style="display: none;">
                <form id="formZwyklyWydatek">



                   
                    <label for="nazwaZwyklegoWydatku">Nazwa wydatku:</label>
                    <select id="nazwaZwyklegoWydatku" name="nazwaZwyklegoWydatku" required>
                        <!-- Dodaj opcje do wyboru -->
                        <option value="opcja1">Zakupy spożywcze</option>
                        <option value="opcja2">Restauracja</option>
                        <option value="opcja3">Bilety na koncert</option>
                        <option value="opcja4">Naprawa samochodu</option>
                        <option value="opcja5">Prezenty</option>
                       
                        <!-- Dodaj więcej opcji według potrzeb -->
                    </select>
                    <br>

                    <label for="ileZwyklegoWydatku">Ilość:</label>
                    <input type="number" id="ileZwyklegoWydatku" name="ileZwyklegoWydatku" required>
                    <br>

                    <label for="dataZwyklegoWydatku">Data:</label>
                    <input type="date" id="dataZwyklegoWydatku" name="dataZwyklegoWydatku" required>
                    <br>

                    <button type="button" onclick="zapiszZwykly()">Zapisz zwykły wydatek</button>
                </form>
            </div>

            <div id="formularzStalyWydatek" class="formularz" style="display: none;">
