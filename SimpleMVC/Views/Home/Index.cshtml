                    <label for="nazwaStalegoWydatku">Nazwa wydatku:</label>
                    <select id="nazwaStalegoWydatku" name="nazwaStalegoWydatku" required>
                        <!-- Dodaj opcje do wyboru -->
                        <option value="opcja1">Czynsz</option>
                        <option value="opcja2">Kredyt</option>
                        <option value="opcja3">Abonament</option>
                        <option value="opcja4">Raty</option>
                        <option value="opcja5">Ubezpieczenie</option>
                        
                        <!-- Dodaj więcej opcji według potrzeb -->
                    </select>
                    <br>

                    <label for="ileStalegoWydatku">Ilość:</label>
                    <input type="number" id="ileStalegoWydatku" name="ileStalegoWydatku" required>
                    <br>

                    <label for="kiedyStalegoWydatku">Jak często ma  być pobierane?:</label>
                    <select id="kiedyStalegoWydatku" name="kiedyStalegoWydatku" required>

                        <option value="kiedy1">Miesiecznie</option>
                        <option value="kiedy2">Rocznie</option>
                        

                    </select>
                    <br>

                    <label for="dataStalegoWydatku">Data:</label>
                    <input type="date" id="dataStalegoWydatku" name="dataStalegoWydatku" required>
                    <br>

                    <button type="button" onclick="zapiszStaly()">Zapisz staly wydatek</button>
                </form>
            </div>

            <div id="formularzZwyklyPrzychod" class="formularz" style="display: none;">
                <form id="formZwyklyPrzychod">
                    <label for="nazwaZwyklegoPrzychodu">Nazwa przychodu:</label>
